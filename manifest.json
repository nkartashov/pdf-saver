{
  "manifest_version": 2,

  "name": "PDF saver",
  "description": "Save PDFs, parse all metadata and save them to Pocket",
  "version": "1.0",

  "browser_action": {
    "default_icon": "images/icon.png"
  },
  "background": {
    "scripts": [
      "js/libs/jquery.min.js",
      "js/libs/pdfjs/build/pdf.js",
      "js/libs/pdfjs/build/pdf.worker.js",

      "js/util.js",
      "js/pocket-auth.js",
      "js/pocket-api.js",
      "js/data.js",
      "js/app.js",
      "js/background.js"
    ]
  },
  "permissions": [
    "activeTab",
    "tabs",
    "identity",
    "storage",
    "https://getpocket.com/*",
    "https://arxiv.org/pdf/*",
    "https://arxiv.org/abs/*",
    "webRequest", "webRequestBlocking",
    "webNavigation",
    "<all_urls>"
  ]
}
