{
  "manifest_version": 2,

  "name": "PDF saver",
  "description": "Save PDFs, parse all metadata and save them to Pocket",
  "version": "1.0.0.0",

  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "browser_action": {
    "default_popup": "html/popup.html"
  },

  "background": {
    "persistent": false,
    "scripts": [
      "js/libs/jquery.min.js",
      "js/libs/pdfjs/build/pdf.js",
      "js/libs/pdfjs/build/pdf.worker.js",

      "js/util.js",
      "js/urls.js",
      "js/pocket-errors.js",
      "js/pocket-auth.js",
      "js/pocket-api.js",
      "js/data.js",
      "js/app.js",
      "js/background.js"
    ]
  },

  "permissions": [
    "tabs",
    "identity",
    "storage",
    "https://getpocket.com/*",
    "https://arxiv.org/pdf/*",
    "https://arxiv.org/abs/*"
  ]
}
