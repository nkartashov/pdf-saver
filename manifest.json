{
  "manifest_version": 2,

  "name": "Pocket arXiv",
  "description": "Saves PDFs from arXiv to Pocket parsing title, author etc",
  "version": "1.0",

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "html/popup.html"
  },
  "permissions": [
    "tabs",
    "identity",
    "storage",
    "https://getpocket.com/*",
    "https://arxiv.org/pdf/*",
    "https://arxiv.org/abs/*",
    "webRequest", "webRequestBlocking",
    "webNavigation"
  ]
}
